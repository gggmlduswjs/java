package ch01.dataType;

/*
 * 단항연산자 : !(일반부정), ~(이진 또는 비트 부정), +/-
 * 
 * */

public class Exam02 {
	public static void main(String[] args) {
		// ! (일반부정)
		boolean a=false;
		boolean b=!a;
		System.out.println(a);
		System.out.println(b);
		
		//~(이진 또는 비트 부정)
		int c=~10;
		//0000 1010 : 10
		//1111 0101 : -11
		System.out.println(c);
		
		int d=~-15;
		// 1111 0001 : -15
		// 0000 1110 : 14
		System.out.println(d);
	
	}
	
}







