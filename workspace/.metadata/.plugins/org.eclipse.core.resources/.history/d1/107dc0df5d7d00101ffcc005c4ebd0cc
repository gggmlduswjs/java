package ch01.dataType;

/*
 * 6. 논리 연산자 : &, |, ^ (이진 논리 연산자)
 * 				&&, || (일반 논리 연산자)
 * 
 * */

public class Exam08 {

	public static void main(String[] args) {
		
		byte a=10;
		byte b=2;
		// 10 : 0000 1010
		// 2 : 0000 0010
		// | : 0000 1010 >> 10
		// & : 0000 0010 >> 2
		// ^ : 0000 1000 // 한 쪽 조건이 참일 때 참
		// 양쪽 조건이 참일 때 참
		System.out.println("a&b"+(a&b)); // & : 0000 0010  2
		System.out.println("a&b"+(a|b)); // | : 0000 0101 10
		System.out.println("a&b"+(a^b)); // ^ : 0000 1000  8
		
		// 여자 : 2, 4, 6
		// 남자 : 1, 3, 5
		// 나이 > 20 && 나이 < 40
		
		int x=15;
		boolean y=x>10 && x<20;		// 15>10 1 && 1 15<20
		boolean z=x==10 || x==15;   // 15==10 || 1 15==15
		System.out.println("x && y"+y);
		System.out.println("x && y"+z);
		
		
		
	}

}
