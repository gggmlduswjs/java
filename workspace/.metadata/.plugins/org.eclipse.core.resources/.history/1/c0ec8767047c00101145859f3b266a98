package ch01.dataType;

/*
 * 6. 논리 연산자 : &, |, ^ (이진 논리 연산자)
 * 				&&, || (일반 논리 연산자)
 * 
 * */

public class Exam08 {

	public static void main(String[] args) {
		
		byte a=10;
		byte b=2;
		// 10 : 0000 1010
		// 2 : 0000 0010
		// | : 0000 1010 >> 10
		// & : 0000 0010 >> 2
		// 양쪽 조건이 참일 때 참
		System.out.println("a&b"+(a&b)); // & : 0000 0010  2
		System.out.println("a&b"+(a|b)); // | : 0000 0101 10
		
	}

}
